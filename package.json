{
  "name": "mygifs",
  "version": "1.0.0",
  "description": "Search for your favorite GIFS!",
  "main": "js/script.js",
  "scripts": {
    "devserver": "live-server",
    "compile-sass": "node-sass sass/main.scss css/style.css",
    "compile-sass:live": "node-sass sass/main.scss css/style.css -w",
    "debug:sass": "node-sass sass/main.scss css/style.css",
    "watch:sass": "nodemon -e scss -x \"npm run debug:sass\"",
    "start": "npm-run-all --parallel devserver watch:sass"
  },
  "author": "Aditya Patange",
  "license": "ISC",
  "devDependencies": {
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3"
  }
}
